<div class="Section">
	<div class="Page">
		{{#if model.better_featured_image}}
			<img src="{{model.better_featured_image.source_url}}" alt="{{model.title}}">
		{{/if}}
		<div class="Page-body">
			<h1>{{model.title}}</h1>
			<section class="SectionBox">
				{{#each model.acf.sections as |section|}}
					<h2 class="SectionBox-title">{{{section.title}}}</h2>
					<div class="SectionBox-body">{{{section.body}}}</div>
				{{/each}}
			</section>
		</div>
	</div>
</div>

{{outlet}}

<h1>{{model.page.title}}</h1>
{{#if model.page.content}}
	{{{model.page.content}}}
{{/if}}

<ul class="List">
	{{#each model.posts as |post|}}
		<li>
			<time>{{moment-from-now post.date interval=1000}}</time>
			{{#link-to 'news.post' post}}{{post.title}}{{/link-to}}
		</li>
	{{/each}}
</ul>

<p>
	<img src="{{model.page.better_featured_image.source_url}}" alt="Sjov med halm">
</p>


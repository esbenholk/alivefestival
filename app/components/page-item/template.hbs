{{#if page.better_featured_image}}
	<figure class="Page-banner">
		<img src="{{page.better_featured_image.source_url}}" alt="{{page.title}}">
	</figure>
{{/if}}

{{#if layout.billetter}}
	<div class="Page-banner">
		<h1>{{page.title}}</h1>
		<button class="DiscoFun NonBtn" {{action 'partyOn'}}>
			<img src="assets/images/icons/party-switch-off.svg" alt="">
			<img src="assets/images/icons/party-switch-on.svg" alt="">
		</button>
	</div>
{{/if}}

<div class="Page-body">
	{{#unless hideContent}}
		{{#if page.title}}<h1>{{page.title}}</h1>{{/if}}
		<div class="Page-content">
			{{{page.content}}}
		</div>
	{{/unless}}
	{{yield}}
</div>

{{#if layout.billetter}}
	<div class="Page-backgroundImage"></div>
{{else if page.acf.background_image.sizes.bg-portrait-xl}}
	<img class="Page-backgroundImage" src="{{page.acf.background_image.sizes.bg-portrait-xl}}" alt="">
{{/if}}

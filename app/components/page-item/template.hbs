{{#if page.better_featured_image}}
	<figure class="Page-banner">
		<img src="{{page.better_featured_image.source_url}}" alt="{{page.title}}">
	</figure>
{{/if}}
<div class="Page-body">
	{{#if page.title}}<h1>{{page.title}}</h1>{{/if}}
	{{{page.content}}}
	{{yield}}
</div>
{{#if page.acf.background_image.sizes.bg-portrait-xl}}
	<img class="Page-backgroundImage" src="{{page.acf.background_image.sizes.bg-portrait-xl}}" alt="">
{{/if}}

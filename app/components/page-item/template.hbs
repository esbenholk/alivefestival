{{#if page.better_featured_image}}
	<figure class="Page-banner">
		<img src="{{page.better_featured_image.source_url}}" alt="{{page.title}}">
	</figure>
{{/if}}

{{#if layout.billetter}}
	<div class="Page-banner">
		<h1>{{page.title}}</h1>

		{{!-- <img src="assets/images/wristband-oskar.png" alt=""> --}}
		<button class="DiscoFun NonBtn" {{action 'partyOn'}}>
			<img src="assets/images/icons/party-switch-off.svg" alt="">
			<img src="assets/images/icons/party-switch-on.svg" alt="">
			{{!-- <i class="icon-party-switch-off"></i> --}}
		</button>
	</div>
{{/if}}

<div class="Page-body">
	{{#if layout.billetter}}

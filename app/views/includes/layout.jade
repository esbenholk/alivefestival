- var language = 'da'
- var dir = 'root'
- var description = ''

//- local vars
block vars	
	- var bodyClass = ''
	- var active = active || ''

doctype
//if lt IE 7
	html.no-js.lt-ie9.lt-ie8.lt-ie7


<div class="index" style="background-image:linear-gradient({{escapeCSS model.page.acf.top_color}}, {{escapeCSS model.page.acf.bottom_color}})" >
	<div class="HeaderContainer">
		<video autoplay loop class="cover-video">
				<source src={{model.page.acf.video}} alt={{model.page.acf.video.alt}} type="video/mp4">
				Your browser does not support the video tag.
		</video>
		<div class="header"> 
			{{#link-to 'application' class="HeaderLogo"}}
					<img width="100" class="Logo-light" src="/assets/images/logos/logo-2017-white.png" alt="Thy Alive Festival">
					<p class="small-caption">{{model.page.acf.abbreviated_festival-date}}</p>
			{{/link-to}}	
			<div class="button-container">
				<img class="arrow"src="/assets/images/icons-output/png/arrow.png"/>
				<div style="background-color:{{escapeCSS model.page.acf.top_color}}; color:{{escapeCSS model.page.acf.text_color}}; border: 1px {{escapeCSS model.page.acf.text_color}} solid" class="Button">
						{{#link-to 'tickets' class=" buttontext"}}
						KÃ¸b billet
						{{/link-to}}
				</div>
			</div>
		</div>
		<div class="headline">
				{{#if model.page.acf.headline_image}}
					<img class="covermage" src={{model.page.acf.headline_image}}/>
				{{else}}
					<div class="topline">
						<h1 style="color:{{escapeCSS model.page.acf.headline_color}}" class="big-headline line1">{{model.page.acf.headline1}}</h1>
						<div class="top-date" style="color:{{escapeCSS model.page.acf.subtitle_color}}" >
							<h2 class="subtitle">{{model.page.acf.festival-begin-date}}</h2>
							<h2 class="subtitle">{{model.page.acf.festival-end-date}}</h2>
						</div>
					</div>
					<div class="bottomline">
						<h1 style="color:{{escapeCSS model.page.acf.headline_color}}" class="big-headline line2">{{model.page.acf.headline2}}</h1>
						<h2 style="color:{{escapeCSS model.page.acf.subtitle_color}}" class="subtitle bottom-date">{{model.page.acf.festival_date_part_2}}</h2>
					</div>
				{{/if}}
		</div>
	</div>

	{{#if model.page.acf.kategori_1}}
	<div style="background-image:linear-gradient({{escapeCSS model.page.acf.cover_image_1_top_color}}, {{escapeCSS model.page.acf.cover_image_1_bottom_color}})" class="Container Media-TopFade categories PaddedContainer">
		<ul class="graphic-container" style="color:{{escapeCSS model.page.acf.kategories_text_color}}"> 
			<li class="graphic-item">
				<img src="{{model.page.acf.kategori_graphic_elements.0.sizes.s}}"/>		
				<a href="{{model.page.acf.kategori_1}}" class="OptiBrianReg"> {{model.page.acf.kategori_1_title}}</a>				
			</li>
			<li class="graphic-item">
					<a href="{{model.page.acf.kategori_2}}" class="OptiBrianItalic"> {{model.page.acf.kategori_2_title}}</a>	
				<img src="{{model.page.acf.kategori_graphic_elements.1.sizes.s}}"/>		
				
			</li>
			<li class="graphic-item">
				<img src="{{model.page.acf.kategori_graphic_elements.2.sizes.s}}"/>		
				<a href="{{model.page.acf.kategori_3}}" class="GTHaptic"> {{model.page.acf.kategori_3_title}}</a>
								
			</li>
			<li class="graphic-item">
				<a href="{{model.page.acf.kategori_4}}" class="GTHaptic"> {{model.page.acf.kategori_4_title}}</a>	
				<img src="{{model.page.acf.kategori_graphic_elements.3.sizes.s}}"/>		
			</li>
		</ul>
	</div>
	{{/if}}


	<div class="column">
		{{#if model.page.acf.show_news}}
		<div class="container" style="background-color:{{escapeCSS model.page.acf.news_ticker_background_color}}">
			<div  class="news-ticker" style="color:{{escapeCSS model.page.acf.news_ticker_text_color}}"> 
				{{#if model.page.acf.news-alert}}
					{{item-ticker items=model.page.acf.news-alert}}
				{{else}}
					{{item-ticker items=model.news no-urgent-news=true}}
				{{/if}}
			</div>
		</div>
		{{/if}}

		{{#if model.page.acf.cover-image2}}
			<img class="coverImage" src="{{model.page.acf.cover-image2}}" alt="{{model.title}}"/>
		{{/if}}
	
		<div class="Container Relative">
			{{inspirational-quote design=model.InspirationalQuoteDesign}}
		</div>
	
		{{#if model.page.acf.cover-image3}}
			<img class="coverImage" src="{{model.page.acf.cover-image3}}" alt="{{model.title}}"/>
		{{/if}}

		<div class="Container Relative">
		{{artist-list artists=model.artists design=model.ArtistListDesign}}
		</div>

		{{#if model.page.acf.cover-image4}}
			<img class="coverImage" src="{{model.page.acf.cover-image4}}" alt="{{model.title}}"/>
		{{/if}}

		
		<div class="Container Relative">
			{{teaser-clicker design=model.MusikTeaserDesign}}
		</div>

		{{#if model.page.acf.cover-image5}}
			<img class="coverImage" src="{{model.page.acf.cover-image5}}" alt="{{model.title}}"/>
		{{/if}}

		<div class="Container Relative">
			{{activity-modul activities=model.activites design=model.activitydesign}}
		</div>

		{{#if model.page.acf.cover-image6}}
			<img class="coverImage" src="{{model.page.acf.cover-image6}}" alt="{{model.title}}"/>
		{{/if}}

		<div class="Container Media--backgroundcolor Media Media-forcedHeight">
			<h2 class="headline-big">{{model.page.acf.planlaegdintur-headline}}</h2>
			<p class="headline-small">{{model.page.acf.planlaegdintur-paragraph}}</p>
			{{activities-list items=model.practical}} 
			{{#link-to 'practical' class="Button purple-Button"}}
					SE ALT DET PRAKTISKE
			{{/link-to}}
		</div>

		{{#if model.page.acf.cover-image7}}
			<img class="coverImage" src="{{model.page.acf.cover-image7}}" alt="{{model.title}}"/>
		{{/if}}
		
		<div class="Container Relative topPadded">
			{{teaser-clicker design=model.frivilligteaser}}
		</div>

		{{#if model.page.acf.cover-image8}}
			<img class="coverImage" src="{{model.page.acf.cover-image8}}" alt="{{model.title}}"/>
		{{/if}}
		

		<div class="Container Relative topPadded">
			{{teaser-clicker design=model.samarbejdsteaser}}
		</div>

		{{#if model.page.acf.cover-image9}}
			<img class="coverImage" src="{{model.page.acf.cover-image9}}" alt="{{model.title}}"/>
		{{/if}}


	</div>
	

		






			

	



	

	






	
</div>



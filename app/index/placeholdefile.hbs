				<h2 style="color:{{escapeCSS model.page.acf.subtitle_color}}" class="subtitle bottom-date">{{model.page.acf.festival_date_part_2}}</h2>
			</div>
		
		</div>
		{{/if}}
		<video autoplay loop class="cover-video">

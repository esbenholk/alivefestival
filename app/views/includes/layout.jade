html.no-js
	// <![endif]
	
	head
		include layout-header
		
	body(class="#{bodyClass}")
		block content-header

		header.l-Header
			h1.Logo
				a(href="/")
					img(src='images/alivefestival.png', alt='')

			nav.l-Navigation
				include navigation

		.l-Main
			block content
		
		//-.Lines
			- for (var i = 0; i < 20; ++i) {
				.Line
			- }
			
		include layout-footer
